<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoa"
    android:orientation="horizontal"
    tools:context=".generadorQR">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:text="SOBRE MI MASCOTA"
                android:textColor="#009688"
                android:textSize="35dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_pets_24"
                android:drawablePadding="20dp"
                android:hint="Nombre de la mascota"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spKind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawablePadding="20dp"
                android:hint="Pet kind"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtRaza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_clear_all_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Raza de la mascota"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtDueño"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Dueño de la mascota"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtTel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Celular de contacto"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtTel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Telefono de contacto"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_import_contacts_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="top"
                android:hint="Descripcion de la mascota"
                android:inputType="textMultiLine"
                android:lines="6"
                android:overScrollMode="always"
                android:padding="20dp"
                android:scrollbarStyle="insideInset"
                android:scrollHorizontally="false"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtVacunas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_healing_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="top"
                android:hint="Vacunas de la mascota"
                android:inputType="textMultiLine"
                android:lines="6"
                android:overScrollMode="always"
                android:padding="20dp"
                android:scrollbarStyle="insideInset"
                android:scrollHorizontally="false"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnGenerarIdentificadorQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#FF5722"
                android:onClick="informacion"
                android:text="Guardar perfil" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>