<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoa"
    tools:context=".register">

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="REGISTRO"
        android:textColor="#009688"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:drawablePadding="20dp"
                android:hint="correo electronico"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtEmail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_contact_support_24"
                android:drawablePadding="20dp"
                android:hint="contraseña"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/edtPasswordConfirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtPassword"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_contact_support_24"
                android:drawablePadding="20dp"
                android:hint="confirmar contraseña"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="390dp"
                android:layout_height="35dp"
                android:text="La contraseña debe tener minimo 8 caracteres"
                android:textColor="#009688"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttons"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtPasswordConfirmed"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#009688"
                    android:text="REGISTRAR" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>